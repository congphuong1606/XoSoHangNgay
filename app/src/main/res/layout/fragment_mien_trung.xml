<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.fragment.MienTrungFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:orientation="horizontal"
            android:weightSum="3">

            <Button
                android:id="@+id/kinoday"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:background="#fff"
                android:drawableLeft="@drawable/ic_chevron_left"
                android:text="04-06-2019"
                android:textColor="@color/colText" />

            <Button
                android:id="@+id/kiyoday"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:background="@drawable/button_border"
                android:drawableRight="@drawable/ic_clear"
                android:text="05-06-2019"
                android:textColor="@color/colTextt" />

            <Button
                android:id="@+id/asitaday"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:background="#fff"
                android:drawableRight="@drawable/ic_chevron_right"
                android:text="06-06-2019"
                android:textColor="@color/colText" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <WebView
                android:id="@+id/webViewTrung"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />
            <RelativeLayout
                android:id="@+id/progressber"
                android:background="@color/vang"
                android:alpha=".1"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ProgressBar
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_centerInParent="true" />

            </RelativeLayout>



        </RelativeLayout>
    </LinearLayout>


</FrameLayout>